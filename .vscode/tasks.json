{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
    
        {
            "label": "build",
            "type": "shell",
            "command": "make rcMainBoard",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },         
            "problemMatcher": []
        },
        {
           "label": "flash",
            "type": "shell",
            "command": "sudo make flash",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            
            "problemMatcher": []
        }
        {
            "label": "gdbhost",
             "type": "shell",
             "command": "make gdbhost",
             "options": {
                 "cwd": "${workspaceFolder}/build"
             },
             
             "problemMatcher": []
         }
    ]
}